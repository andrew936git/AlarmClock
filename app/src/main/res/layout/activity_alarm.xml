<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AlarmActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAlarmStop"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wakeUp"
        android:textSize="@dimen/_48sp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_100dp"
        tools:ignore="MissingConstraints" />


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/stopButtonIV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_300dp"
        android:src="@drawable/a5331134ee11f537982c7d816778544b"
        tools:ignore="ContentDescription,MissingConstraints" />

</LinearLayout>